<!--Requerimientos-->
<%- include("templates/encabezado") %>
<%- include("templates/googleanalitics") %>

<script src="/web/js/almaguer.js" defer></script>
<script src="/web/js/carrito.js"></script>

<link rel="stylesheet" href="/web/css/stylesOfMenu.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<!--Menu-->
<menu>
  <div class="menu-container">
    <div class="cart">
      <a href="/shopingCart" style="text-decoration: none;">
        <span class="shopping-icon">
          <i class="fas fa-shopping-cart"></i>
          <div class="cartAmount">0</div>
        </span>
      </a>
    </div>
    <img id="logo" src="/web/Img/Grupo 1@2x.png" alt="Logo" height="70px">
    <span class="hamburger-icon"><i class="fas fa-bars"></i></span>
    <div class="dropdown-menu">
      <ul>
        <li><a href="/inicio">Inicio</a></li>
        <li><a href="/provAlmaguer">Proveedor Almaguer</a></li>
        <li><a href="/provVero">Proveedor Vero</a></li>
        <li><a href="/aboutus">F&Q</a></li>
        <li><a href="/login">Cerrar Sesión</a></li>
      </ul>
    </div>
  </div>
</menu>
<!--Fin Menu-->
<!-- Lista de productos -->
<div class="grid-container animate__animated animate__backInDown">
  <% productos.forEach(producto => { %>
    <% console.log(producto); %>
    <!--Esto viene de la base de datos en planet scale -->
    <span id="id<%= producto.id_product %>" class="hidden"><%= producto.id_product %></span>

    <div class="grid-item">
      <img src="https://cdn.pixabay.com/photo/2023/05/29/17/01/hamburger-8026582_1280.jpg" alt="Descripción de la imagen" />
      <div class="overlay">
        <span id="titulo<%= producto.id_product %>"><%= producto.name_product %> $<%= producto.precio_product %></span>
        <span class="text" id="description<%= producto.id_product %>" name="descrip_product"><%= producto.descrip_product %></span>
        <span class="text" id="ingredients<%= producto.id_product %>"><%= producto.ingredientes_product %></span>
      </div>
      <!--  en imagen debemos poner este cual conecta a la base de datos  <%= producto.imagen %> -->
    </div>
  <% }) %>
</div>

<!-- PopUp -->
<div class="containerpopup"></div>
<div class="popup" id="popup">
  <span class="close-button">&times;</span>
  <h2 id="popup-title" class="popup-title top-50"></h2>
  <div id="popup-image" class="popup-image"></div>
  <div id="popup-description" class="popup-description text-center fs-5 m-3"></div>
  <ul id="popup-ingredients" class="popup-ingredients"></ul>
  <!-- Botón "Agregar al carrito" dentro del pop-up -->
  <button class="popup-button" onclick="addToCart(producto)">Agregar al carrito</button>
</div>
</body>
</html>