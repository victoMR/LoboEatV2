<!-- Lista de productos -->
<div id="addToCartButtons" class="grid-container">
  <% let i = 1; %>
  <% items.forEach((producto) => { %>
    <% console.log(producto); %>
    <span id="id<%= i %>" class="hidden"><%= producto.id_product %></span>
    <div class="grid-item animate__animated animate__rubberBand">
      <img src="https://cdn.pixabay.com/photo/2023/05/29/17/01/hamburger-8026582_1280.jpg" alt="Descripción de la imagen" />
      <div class="overlay">
        <span id="titulo<%= i %>"><%= producto.name_product %> $<%= producto.precio_product %></span>
        <span class="text" id="description<%= i %>" name="descrip_product"><%= producto.descrip_product %></span>
        <span class="text" id="ingredients<%= i %>"><%= producto.ingredientes_product %></span>
      </div>
      <!--  en imagen debemos poner este cual conecta a la base de datos  <%= producto.imagen %> -->
    </div>
    <% i++; %>
  <% }) %>
</div>

<!-- Add to cart buttons -->
<div class="grid-container">
  <% items.forEach((producto) => { %>
    <% if (producto.id_product === 1) { %>
      <div class="grid-item animate__animated animate__rubberBand">
        <a href="/agregar/<%= producto.id_product %>" class="btn btn-primary col-5 rounded-4  "><i class="bi bi-basket3-fill"></i></a>
      </div>
    <% } else if (producto.id_product === 2) { %>
      <div class="grid-item animate__animated animate__rubberBand">
        <a href="/agregar/<%= producto.id_product %>" class="btn btn-primary col-5 rounded-4  "><i class="bi bi-basket3-fill"></i></a>
    <% } %>
  <% }) %>
</div>


<!-- PopUp -->
<div class="containerpopup"></div>
<div class="popup" id="popup">
  <span class="close-button">&times;</span>
  <h2 id="popup-title" class="popup-title m-4"></h2>
  <div id="popup-image" class="popup-image m-2"></div>
  <div id="popup-description" class="popup-description m-1 text-md-center fs-5"></div>
  <ul id="popup-ingredients" class="popup-ingredients"></ul>
</div>
</body>
</html>